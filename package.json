{
  "name": "bilinguismo-project",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "client",
    "family-client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:family\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "dev:family": "npm run dev --workspace=family-client",
    "build": "npm run build --workspaces --if-present",
    "build:client": "npm run build --workspace=client",
    "build:family": "npm run build --workspace=family-client",
    "build:server": "npm run build --workspace=server",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "rm -rf node_modules && rm -rf */node_modules && npm install",
    "postinstall": "npm run prisma:generate",
    "prisma:generate": "npm run prisma:generate --workspace=server",
    "prisma:migrate": "npm run prisma:migrate --workspace=server",
    "prisma:studio": "npm run prisma:studio --workspace=server"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "dependencies": {
    "dotenv": "^17.2.1"
  }
}
